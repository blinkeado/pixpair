rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Users can only access their own files
    match /users/{userId}/photos/{photoId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Session photos can be read by any authenticated user in the session
    // but only written by the user who owns them
    match /sessions/{sessionId}/photos/{fileName} {
      // For photo uploads (userId is part of the filename)
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                    (fileName.matches(request.auth.uid + '_.*') || 
                     fileName.matches('combined_' + request.auth.uid + '_.*'));
    }
    
    // Fallback rule - deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 